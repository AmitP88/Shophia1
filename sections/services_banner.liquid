<div class="services__banner">
  <div class="services__banner-service" id="service_1">
    <div class="service__icon">
      <img src="{{ section.settings.service_1_icon | img_url: '25x25'}}">
    </div>
    <div class="service__text">
      <h2>{{ section.settings.service_1_title }}</h2>
      <p>{{ section.settings.service_1_description }}</p>
    </div>
  </div>
  <div class="services__banner-service" id="service_2">
    <div class="service__icon">
      <img src="{{ section.settings.service_2_icon | img_url: '25x25'}}">
    </div>
    <div class="service__text">
      <h2>{{ section.settings.service_2_title }}</h2>
      <p>{{ section.settings.service_2_description }}</p>
    </div>
  </div>
  <div class="services__banner-service" id="service_3">
    <div class="service__icon">
      <img src="{{ section.settings.service_3_icon | img_url: '25x25'}}">
    </div>
    <div class="service__text">
      <h2>{{ section.settings.service_3_title }}</h2>
      <p>{{ section.settings.service_3_description }}</p>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Services Banner",
    "tag": "section",
    "class": "services_banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "service_1_icon",
        "label": "Service 1 Icon"
      },
      {
        "type": "text",
        "id": "service_1_title",
        "label": "Service 1 Title",
        "default": "Free Shipping"
      },
      {
        "type": "text",
        "id": "service_1_description",
        "label": "Service 1 Description",
        "default": "In Order Min $200"
      },
      {
        "type": "image_picker",
        "id": "service_2_icon",
        "label": "Service 2 Icon"
      },
      {
        "type": "text",
        "id": "service_2_title",
        "label": "Service 2 Title",
        "default": "30-Day Returns"
      },
      {
        "type": "text",
        "id": "service_2_description",
        "label": "Service 2 Description",
        "default": "Money Back Guarantee"
      },
      {
        "type": "image_picker",
        "id": "service_3_icon",
        "label": "Service 3 Icon"
      },
      {
        "type": "text",
        "id": "service_3_title",
        "label": "Service 3 Title",
        "default": "24/7 Support"
      },
      {
        "type": "text",
        "id": "service_3_description",
        "label": "Service 3 Description",
        "default": "Lifetime Support"
      }
    ]
  }
{% endschema %}
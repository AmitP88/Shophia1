/* ================================================ */

.top__header {
  background-color: pink;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.75rem 6rem;
}

.top__header-phone {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.top__header > .top__header-phone > p {
  margin: 0;
  font-size: 0.75rem;
}

hr {
  height: 2.25rem;
  background-color: salmon;
  margin: 0;
  border: none;
}

.top__header-customer {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.top__header > .top__header-customer > p {
  margin: 0;
  text-transform: uppercase;
  font-size: 0.75rem;
}

.top__header > .top__header-customer > span, .phone__number {
  padding: 0 1.25rem;
}

.bottom__header > .bottom__header-top {
  display: flex;
  justify-content: space-between;
  padding: 1.20rem 6rem;
  background-color: red;
}

.bottom__header > .bottom__header-top > .bottom__header-navigation > a {
  text-decoration: none;
  color: black;
  margin: 0 1rem;
  font-family: "EurotypoBKL_Italic";
  font-size: 1.25rem;
}

.bottom__header > .bottom__header-top > .bottom__header-navigation > a:first-child {
  margin-left: 0;
}

.bottom__header > .bottom__header-top > .bottom__header-title {
  margin-right: 5%;
}

.bottom__header > .bottom__header-top > .bottom__header-social {
  display: flex;
  align-items: flex-start;
}

.bottom__header > .bottom__header-top > .bottom__header-social > .social__buttons {
  display: flex;
  padding-right: 2rem;
}

.bottom__header > .bottom__header-top > .bottom__header-social > .social__buttons > .social__buttons-button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10px;
  width: 30px;
  height: 30px;
  color: tan;
  border: tan solid 2px;
  border-radius: 50%;
}

.bottom__header > .bottom__header-bottom {
  display: flex;
  justify-content: center;
  padding: 0 6rem;
}

.bottom__header > .bottom__header-bottom > .bottom__header-shape {
  width: 33%;
  height: 50px;
  background-color: red;
  clip-path: polygon(0 0, 50% 100%, 100% 0);
}

/* The side navigation menu */
.sidenav {
  height: 100%; /* 100% Full-height */
  width: 0; /* 0 width - change this with JavaScript */
  position: fixed; /* Stay in place */
  z-index: 1; /* Stay on top */
  top: 0; /* Stay at the top */
  left: 0;
  background-color: #111; /* Black*/
  overflow-x: hidden; /* Disable horizontal scroll */
  padding-top: 60px; /* Place content 60px from the top */
  transition: 0.5s; /* 0.5 second transition effect to slide in the sidenav */
}

/* The navigation menu links */
.sidenav a {
  padding: 8px 8px 8px 32px;
  text-decoration: none;
  font-size: 25px;
  color: #818181;
  display: block;
  transition: 0.3s;
}

/* When you mouse over the navigation links, change their color */
.sidenav a:hover {
  color: #f1f1f1;
}

/* Position and style the close button (top right corner) */
.sidenav .closebtn {
  position: absolute;
  top: 0;
  right: 25px;
  font-size: 36px;
  margin-left: 50px;
}

.mobile__header-hamburger > div {
  width: 35px;
  height: 5px;
  background-color: black;
  margin: 6px 0;
}



/* ======================== Media Queries  ========================= */

/* Mobile */
.mobile__header {
  display: flex;
  justify-content: space-between;
}

.desktop__header {
  display: none;
}

/* Desktop */
@media only screen and (min-width: 1024px) {
  .mobile__header {
    display: none;
  }

  .desktop__header {
    display: initial;
  }
}
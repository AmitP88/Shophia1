  top: 0;
}

/* The dots/bullets/indicators */
.dots__container {
  position: absolute;;
  left: 50%;
  transform: translate(-50%, 0);
  bottom: 7%;
}

.dot {
  cursor: pointer;
  height: 10px;
  width: 10px;
  margin: 0 5px;
  background-color: rgb(219, 219, 219);
  display: inline-block;
  transform: rotate(45deg);
  transition: background-color 0.6s ease;
}

.active, .dot:hover {
  background-color: #000000;
}

/* Fading animation */
.fade {
  animation-name: fade;
  animation-duration: 1.5s;
}

@keyframes fade {
  from {opacity: .4}
  to {opacity: 1}
}

.transparent-overlay {
  display: block;

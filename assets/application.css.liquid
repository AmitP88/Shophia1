/* OpenSans-Regular */
@font-face {
  font-family: "OpenSans-Regular";
  src: url("OpenSans-Regular.woff2") format("woff2"),
       url("OpenSans-Regular.woff") format("woff");
};

p {
  font-family: "OpenSans-Regular";
}

.top__header {
  background-color: pink;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.75rem 6rem;
}

.top__header-phone {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.top__header > .top__header-phone > p {
  margin: 0;
}

hr {
  height: 2.25rem;
  background-color: salmon;
  margin: 0;
  border: none;
}

.top__header-customer {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.top__header > .top__header-customer > p {
  margin: 0;
  text-transform: uppercase;
}

.top__header > .top__header-customer > span, .phone__number {
  padding: 0 1.25rem;
}

.bottom__header > .bottom__header-top {
  display: flex;
  justify-content: space-between;
  padding: 1.20rem 6rem;
  background-color: red;
}

.bottom__header > .bottom__header-top > .bottom__header-navigation > a {
  text-decoration: none;
  color: black;
  margin: 0 1rem;
}

.bottom__header > .bottom__header-top > .bottom__header-social {
  display: flex;
  align-items: center;
}

.bottom__header > .bottom__header-top > .bottom__header-social > .social__buttons {
  display: flex;
  padding-right: 2rem;
}

.bottom__header > .bottom__header-top > .bottom__header-social > .social__buttons > .social__buttons-button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10px;
  width: 30px;
  height: 30px;
  color: tan;
  border: tan solid 2px;
  border-radius: 50%;
}

.bottom__header > .bottom__header-bottom {
  display: flex;
  justify-content: center;
  padding: 0 6rem;
}

.bottom__header > .bottom__header-bottom > .bottom__header-shape {
  width: 33%;
  height: 50px;
  background-color: red;
  clip-path: polygon(0 0, 50% 100%, 100% 0);
}